@model IEnumerable<DoctorViewModel>
@{
    ViewData["Title"] = "Team";
}
<body>
    <h1 class="team">Team</h1>
    <table class="tbl-team">
        <tbody>
            @{
                foreach (var doctor in Model)
                {
                    <form method="post">
                        <tr>
                            <td class="td-team">
                                <div class="doctor">
                                    <input type="text" id="doctor" name="doctor" value=@doctor.Id style="display:none">
                                    <div class="doctor-logo">
                                        <img src="../img/avatar.png" width="100" height="100">
                                    </div>
                                    <div class="doctor-name">
                                        <h3 name="DocName">@doctor.Name</h3>
                                    </div>
                                    <div class="doctor-position">
                                        <h4>@doctor.Qualification</h4>
                                    </div>
                                    <div class="doctor-info">
                                        <details class="doctor-info-details">
                                            <summary class="doctor-info-summary">More info</summary>
                                            @doctor.MoreInfo
                                        </details>

                                    </div>
                                    <div class="doctor-btn">
                                        <button class="doctor-btn-btn" type="submit">Book now</button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </form>
                }
            }
        </tbody>
    </table>

</body>
